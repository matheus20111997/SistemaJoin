<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ViewCadastrarProfessor"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="9dp"
        android:layout_marginTop="6dp"
        android:text="Cadastrar Professor"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26">

        <LinearLayout
            android:layout_width="374dp"
            android:layout_height="466dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="47dp">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctNomeProf"
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Nome"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Data de nascimento:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctDataNascProf"
                android:layout_width="311dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Data de nascimento"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctEmailProf"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telefone:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctTelProf"
                android:layout_width="308dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Telefone"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView53"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctCPFProf"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="CPF"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView59"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RG:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctRGProf"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="RG"
                android:inputType="number" />

            <TextView
                android:id="@+id/textView79"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Formação:"
                android:textColor="@android:color/background_dark"
                android:textSize="17sp" />

            <EditText
                android:id="@+id/ctFormProf"
                android:layout_width="313dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Formaçao"
                android:inputType="number" />

            <Button
                android:id="@+id/btProximoProf1"
                android:layout_width="202dp"
                android:layout_height="67dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/botao_customizado"
                android:text="Salvar"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>