<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.ViewCadastrarEscola"
    android:background="@drawable/gradiente">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Cadastrar escola"
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        tools:layout_editor_absoluteX="163dp"
        tools:layout_editor_absoluteY="16dp" />


    <Button
        android:id="@+id/btProsseguir"
        android:layout_width="202dp"
        android:layout_height="62dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="@drawable/botao_customizado"
        android:text="Prosseguir"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="331dp"
        android:layout_height="356dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:background="@drawable/arredondar">

        <EditText
            android:id="@+id/ctNomeEsc"
            android:layout_width="304dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="49dp"
            android:background="@color/camposTexto"
            android:ems="10"
            android:hint="Nome da escola"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ctCNPJEsc"
            android:layout_alignStart="@+id/ctNomeEsc"
            android:text="CNPJ:"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/ctNomeEsc"
            android:layout_marginTop="27dp"
            android:text="Nome da escola:"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ctEmailEsc"
            android:layout_alignStart="@+id/ctNomeEsc"
            android:text="Email da escola:"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ctTelEsc"
            android:layout_alignStart="@+id/ctNomeEsc"
            android:layout_marginBottom="-130dp"
            android:text="Telefone da escola:"
            android:textColor="@android:color/background_dark"
            android:textSize="17sp" />

        <EditText
            android:id="@+id/ctEmailEsc"
            android:layout_width="307dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="105dp"
            android:background="@color/camposTexto"
            android:ems="10"
            android:hint="Email da escola"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/ctTelEsc"
            android:layout_width="303dp"
            android:layout_height="36dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="130dp"
            android:background="@color/camposTexto"
            android:ems="10"
            android:hint="Telefone"
            android:inputType="phone" />


        <EditText
            android:id="@+id/ctCNPJEsc"
            android:layout_width="302dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="24dp"
            android:background="@color/camposTexto"
            android:ems="10"
            android:hint="CNPJ"
            android:inputType="number" />
    </RelativeLayout>
</RelativeLayout>